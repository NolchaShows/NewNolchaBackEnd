{
  "kind": "collectionType",
  "collectionName": "designers",
  "info": {
    "singularName": "designer",
    "pluralName": "designers",
    "displayName": "Designer",
    "description": "Designer/Artist profile and portfolio"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "heading": {
      "type": "text",
      "required": false
    },
    "paragraphs": {
      "type": "component",
      "repeatable": true,
      "component": "designer.paragraph"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "listingImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "source": {
      "type": "string",
      "required": false
    },
    "sliderImages": {
      "type": "component",
      "repeatable": true,
      "component": "designer.slider-image"
    },
    "socialImages": {
      "type": "component",
      "repeatable": true,
      "component": "designer.social-image"
    },
    "sections": {
      "type": "component",
      "repeatable": true,
      "component": "designer.section"
    }
  }
}
